
run = "npm run dev"
modules = ["nodejs-20:v8-20230920-bd784b9"]

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "NODE_ENV=production node server/app.mjs"]
deploymentTarget = "gce"
build = ["sh", "-c", "NODE_OPTIONS='--max-old-space-size=4096' npm run build"]

[[ports]]
localPort = 3001
externalPort = 80

[[ports]]
localPort = 8080
externalPort = 8080

[workflows]
runButton = "Production"

[[workflows.workflow]]
name = "Development"
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev:js"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev:css"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run serve"

[[workflows.workflow]]
name = "Production"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "NODE_ENV=production npm run serve:prod"
