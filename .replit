externalPort = 80

[[ports]]
localPort = 3080

[[ports]]
localPort = 8080
externalPort = 8080

[workflows]
runButton = "Production"

[[workflows.workflow]]
name = "Production"
author = 34903672
mode = "sequential"

[[workflows.workflow.tasks]]
