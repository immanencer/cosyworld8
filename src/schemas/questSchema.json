
{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Quest",
  "type": "object",
  "properties": {
    "_id": {
      "type": ["string", "object"],
      "description": "Quest unique identifier"
    },
    "title": {
      "type": "string",
      "description": "Quest title"
    },
    "description": {
      "type": "string",
      "description": "Quest description"
    },
    "conditions": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["ITEM_AT_LOCATION", "ITEM_OWNED_BY_AVATAR"],
          "description": "Type of condition to check"
        },
        "itemId": {
          "type": "string",
          "description": "Target item ID"
        },
        "locationId": {
          "type": "string",
          "description": "Target location ID for ITEM_AT_LOCATION"
        },
        "avatarId": {
          "type": "string",
          "description": "Target avatar ID for ITEM_OWNED_BY_AVATAR"
        }
      },
      "required": ["type", "itemId"]
    },
    "reward": {
      "type": "object",
      "description": "Quest reward details"
    },
    "status": {
      "type": "string",
      "enum": ["ACTIVE", "COMPLETED", "FAILED"],
      "default": "ACTIVE"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time"
    },
    "version": {
      "type": "string",
      "description": "Schema version"
    }
  },
  "required": ["title", "description", "conditions", "status", "createdAt", "updatedAt", "version"]
}
