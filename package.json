  "main": "src/index.mjs",
  "type": "module",
  "scripts": {
    "start": "node src/index.mjs",
    "dev": "nodemon src/index.mjs",
    "build:js": "webpack --mode production --progress",
    "dev:js": "webpack --mode development --watch",
    "build:css": "cross-env NODE_ENV=production tailwindcss -i ./src/tailwind.css -o ./dist/css/tailwind.css --minify",
    "dev:css": "tailwindcss -i ./src/tailwind.css -o ./public/css/tailwind.css --watch",
    "build": "npm run clean && npm run build:js && npm run build:css && npm run copy-assets",
    "clean": "rimraf dist",
    "copy-assets": "node scripts/copy-assets.mjs",
    "wiki": "npm run build:wiki",
    "docs": "node scripts/build-docs.mjs",
    "serve": "node src/index.mjs",
    "serve:prod": "cross-env NODE_ENV=production node src/index.mjs"
  },
  "keywords": [
    "discord",
    "ai",
    "avatar",
    "rpg"
  ],
